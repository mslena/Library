<?xml version="1.0" encoding="UTF-8"?>
<beans  xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:context="http://www.springframework.org/schema/context"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="org.example.Classes" />
    <bean id = "LibraryCardNumber" class = "org.example.Classes.Reader"/>
    <bean id = "ID_Taking" class = "org.example.Classes.Logbook"/>
    <bean id = "ID_Catalog" class = "org.example.Classes.Catalog"/>
    <bean id = "ID_Librarian" class = "org.example.Classes.Librarian"/>
    <bean id = "ID_Condition" class = "org.example.Classes.BookCondition"/>
    <bean id = "ID_Book" class = "org.example.Classes.InstanceBook"/>
    <bean id = "ID_Branch" class = "org.example.Classes.Branch"/>
</beans>